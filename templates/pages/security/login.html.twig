{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Formulaire de connexion</h1>

    <form action="{{ path('security.login') }}" method="post">
        <div class="form-group">
            <label for="username" class="form-label mt-4">Adresse Email</label>
            <input type="email" class="form-control" id="_username" aria-describedby="emailHelp" name="_username" placeholder="exemple@recette.fr" value="{{ last_username }}">
            </div>
        <div class="form-group">
            <label for="password" class="form-label mt-4">Mot de passe</label>
            <input type="password" class="form-control" id="password" placeholder="********" name="_password" autocomplete="off">
        </div>

        <button type="submit" class="mt-4 btn btn-primary">Se connecter</button>


    </form>
</div>

{% endblock %}
